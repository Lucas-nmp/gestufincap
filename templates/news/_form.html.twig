<div class="form-wrapper">
  {{ form_start(form) }}

    <div class="mb-3">
      {{ form_row(form.author) }}
    </div>
    <div class="mb-3">
      {{ form_row(form.title) }}
    </div>
    <div class="mb-3">
      {{ form_row(form.date_news) }}
    </div>
    <div class="mb-3">
      {{ form_row(form.body) }}
    </div>
    <div class="mb-3">
      {{ form_row(form.link) }}
    </div>

    <div class="modal-footer">
      <button type="submit" class="btn btn-primary me-2" title="Guardar">
        <i class="fa fa-save"></i>
      </button>
      <a href="{{ path('app_news_index') }}" class="btn btn-secondary" title="Volver a la lista">
        <i class="fa fa-arrow-left"></i>
      </a>
    </div>

  {{ form_end(form) }}
</div>
